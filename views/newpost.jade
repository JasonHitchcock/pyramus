extends layout
block content
    if textPost
        h2 Submit a new text post
    else
        h2 Submit a new link post
    form(name="newpost", action= "/r/" + subpy + "/submit", method="post")
        label(for="title") Title
        input.u-full-width(type="text", name="title", required="true", placeholder="Title...")
        if textPost
            textarea.u-full-width(type="text", name="selftext", placeholder="Say something..." id="self-text-box")
        else
            label(for="link") Link
            input.u-full-width(type="text", name="link", required="true", placeholder="URL...")
        label(for="subpy") Subpy
        input.u-full-width(type="text", name="subpy", required="true", value=subpy)
        input.button.button-primary(type="submit", value="Submit")
